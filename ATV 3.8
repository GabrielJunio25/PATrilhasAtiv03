using System;

class Program
{
    static void Main()
    {
      
        Console.Write("Digite um número: ");
        float num1 = float.Parse(Console.ReadLine());
        
       
        if (num1 > 0){
             Console.WriteLine("{0} é positivo", num1 );
        }
        
        else if(num1 == 0){
            Console.WriteLine("{0} é neutro", num1 );
        }
        
        else{
             Console.WriteLine("{0} é negativo", num1 );}
        
        
       
    }
}
